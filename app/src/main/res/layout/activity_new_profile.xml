<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        tools:context=".Misc.Profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@color/darkbluebackground"
                android:orientation="vertical">


                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="changeProfile"
                    />





                <TextView
                    android:id="@+id/profile_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Wiliam Snoe"
                    android:textColor="#fff"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/cardview_light_background"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="225dp"
                android:background="@drawable/extra_rounded_corners">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Credit"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableLeft="@drawable/rand_vector_letter"
                        android:paddingTop="10dp"
                        android:text="0"
                        android:textColor="@color/darkbluebackground"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="45dp">
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/darkbluebackground"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:weightSum="10"
                android:onClick="doNext">
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:paddingTop="10dp"
                    android:paddingRight="4sp"
                    android:src="@drawable/ic_baseline_shop_24"/>
                <TextView
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    android:text="MARKET PLACE"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_chevron_right_24" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:background="@color/darkbluebackground"
                android:weightSum="10"
                android:onClick="doHistory">
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="25dp"
                    android:layout_height="36dp"
                    android:paddingTop="10dp"
                    android:paddingRight="4sp"
                    android:src="@drawable/ic_baseline_history_24"/>
                <TextView
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="HISTORY"
                    android:textColor="#fff"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="16sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16sp"
                    android:src="@drawable/ic_baseline_chevron_right_24" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20sp"
                android:background="@color/darkbluebackground"
                android:layout_marginBottom="10sp"
                android:weightSum="10"
                android:onClick="add_item">
                <ImageView
                    android:layout_weight="2"
                    android:layout_width="25dp"
                    android:layout_height="36dp"
                    android:paddingTop="10dp"
                    android:paddingRight="4sp"
                    android:src="@drawable/ic_baseline_add_circle_24"/>
                <TextView
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    android:text="ADD ITEM"
                    android:textColor="#fff"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="16sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_chevron_right_24" />
            </LinearLayout>

